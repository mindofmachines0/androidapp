<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <ImageView
        android:id="@+id/messageSenderProfile"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/ic_sender_profile_foreground" />

    <ImageView
        android:id="@+id/messageSelfProfile"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/messageSenderNickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terry"
        android:textColor="#3a414d"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/messageSenderProfile"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/messageTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="11:36"
        android:textColor="#bebed1"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/messageSenderNickname"
        app:layout_constraintBottom_toBottomOf="@+id/messageSenderNickname"/>

    <TextView
        android:id="@+id/messageText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Test Message."
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/messageSelfProfile"
        app:layout_constraintStart_toEndOf="@id/messageSenderProfile"
        app:layout_constraintTop_toBottomOf="@+id/messageSenderNickname" />

</androidx.constraintlayout.widget.ConstraintLayout>